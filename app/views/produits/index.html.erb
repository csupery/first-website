<div class="row justify-content-between align-items-center flex-grow-0">
  <div class="col-2">
    <aside class="container mt-4 text-center">
      <% @genres.each do |genre|%>
        <h5 class="mt-4"> <%= genre.name.upcase  %> </h5>
        <% @categories.each do |category| %>
          <h6> <%= category.name.capitalize %> </h6>
        <% end %>
      <% end %>
    </aside>
  </div>

  <div class="col-10">
    <div class="cards m-4">
      <% @produits.each do |produit| %>
        <%= render 'produit_card', produit: produit %>
      <% end %>
    </div>
  </div>
</div>




