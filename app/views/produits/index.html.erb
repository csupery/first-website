<div class="row justify-content-between align-items-center flex-grow-0">
  <div class="col-2">
    <aside class="container mt-4">
      <% @genres.each do |genre|%>
        <h5 class="mt-4"> <%= genre.name.upcase  %>  </h5>
        <% @categories.where(genre: genre).each do |category| %>
          <h6> <%= category.name.capitalize %> </h6>
        <% end %>
      <% end %>
    </aside>
  </div>

  <div class="col-10">
    <% @produits.each do |produit| %>
      <div class="cards">
        <div class="card-produit">
          <%= cl_image_tag produit.photos.first.key, height: 300, width: 400, crop: :fill %>
          <div class="card-produit-infos">
            <div>
              <h2> <%= produit.name.capitalize %> </h2>
              <p>  <%= produit.marque.name.capitalize %> </p>
            </div>
            <h2 class="card-produit-pricing"> <%= produit.price %> â‚¬ </h2>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>




