<div class="container">
<p id="notice"><%= notice %></p>

  <h1>Produits</h1>

  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Reference</th>
        <th>Prix</th>
        <th>Couleur</th>
        <th>Quantite</th>
        <th>Marque</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produits.each do |produit| %>
        <tr>
          <td><%= produit.nom %></td>
          <td><%= produit.description %></td>
          <td><%= produit.reference %></td>
          <td><%= produit.prix %></td>
          <td><%= produit.couleur %></td>
          <td><%= produit.quantite %></td>
          <td><%= produit.marque_id %></td>
          <td><%= produit.category_id %></td>
          <td><%= link_to 'Show', produit %></td>
          <td><%= link_to 'Edit', edit_produit_path(produit) %></td>
          <td><%= link_to 'Destroy', produit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Produit', new_produit_path %>
</div>
