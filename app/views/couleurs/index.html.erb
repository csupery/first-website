<p id="notice"><%= notice %></p>

<h1>Couleurs</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @couleurs.each do |couleur| %>
      <tr>
        <td><%= couleur.nom %></td>
        <td><%= link_to 'Show', couleur %></td>
        <td><%= link_to 'Edit', edit_couleur_path(couleur) %></td>
        <td><%= link_to 'Destroy', couleur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

